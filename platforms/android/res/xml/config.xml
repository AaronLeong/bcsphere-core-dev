<?xml version='1.0' encoding='utf-8'?>
<widget id="org.bcsphere.bcsphere-core-dev" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <name>BCSphereCoreDev</name>
    <description>
        BCSphere Core Framework Development Environment.
    </description>
    <author email="zhi.li@jumacc.com">
        JUMA Technology
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <feature name="BCBluetooth">
        <param name="android-package" value="org.bcsphere.bluetooth.BCBluetooth" />
    </feature>
    <feature name="BCWifi">
        <param name="android-package" value="org.bcsphere.wifi.BCWifi" />
    </feature>
</widget>
